<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GiftRandomPicker.Views.EasterMainPage"
             Title="Pneuma Easter Event"
             BackgroundColor="Pink">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit Mode"
                     Clicked="NavigateToEditPage" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.ColumnSpan="2" Clicked="Button_Reset" Text="Reset" Style="{StaticResource ButtonStyle}"></Button>
                    <Button Grid.Column="0" Grid.Row="1" x:Name="ButtonGetHider" Clicked="GetHider" Text="Get hider" Style="{StaticResource ButtonStyle}"></Button>
                    <Button Grid.Column="1" Grid.Row="1" x:Name="ButtonGetHunter" Clicked="GetHunter" Text="Get hunter" Style="{StaticResource ButtonStyle}" IsEnabled="False"></Button>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Hider: " FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="1" Text="Hunter: " FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="1" Text="" x:Name="Hider" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="1" Grid.Row="1" Text="" x:Name="Hunter" FontSize="Title" TextColor="Blue"></Label>
                </Grid>
                <Grid>
                    <Label Grid.Column="0" Grid.Row="0" Text="" FontSize="Title"></Label>
                    <Label Grid.Column="0" Grid.Row="1" Text="Steps: " FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="2" Text="Step1" x:Name="Step1" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="3" Text="Step1" x:Name="Step2" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="4" Text="Step1" x:Name="Step3" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="5" Text="Step1" x:Name="Step4" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="6" Text="Step1" x:Name="Step5" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="7" Text="Step1" x:Name="Step6" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="8" Text="Step1" x:Name="Step7" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="9" Text="Step1" x:Name="Step8" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="10" Text="Step1" x:Name="Step9" FontSize="Title" TextColor="Blue"></Label>
                    <Label Grid.Column="0" Grid.Row="11" Text="Step1" x:Name="Step10" FontSize="Title" TextColor="Blue"></Label>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>